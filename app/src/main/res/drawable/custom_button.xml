<?xml version="1.0" encoding="utf-8"?>
<layer-list

    android:shape="rectangle"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gray shadow. -->
    <item android:left="2.5dp" android:top="2.5dp">
        <shape>
            <solid android:color="#72B3B2B2" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- White foreground. -->
    <item android:bottom="2.5dp" android:right="2.5dp">
        <shape>
            <size android:width="100dp"
                android:height="50dp"/>
            <solid android:color="@color/white"/>
            <corners android:radius="6dp"/>
<!--            <stroke android:color="#A6A6A7"-->
<!--                android:width="1.1dp"/>-->
        </shape>
    </item>

</layer-list>